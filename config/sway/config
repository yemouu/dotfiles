mode "focus-output" {
	bindsym {
		1 focus output "LG Electronics LG HDR WFHD 0x0000B11B"; mode "default"
		2 focus output "BNQ BenQ PD2700U ET87K04288SL0"; mode "default"
		3 focus output "AOC 2460G4 0x0000075E"; mode "default"
		Escape mode "default"
	}
}

