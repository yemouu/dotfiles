#!/bin/sh
# Script to launch a specific firefox profile

# I don't have firefox store data at the root of my homedir
HOMEWRAP_HOME="/home/mou/tmp/homes/mozilla"

profile_location="$HOMEWRAP_HOME/.mozilla"
profile="$(grep Name= $profile_location/firefox/profiles.ini | sed 's/Name=//' | sort |
           bemenu -p 'Pick a profile:')"

[ -z "$profile" ] && exit

exec moulog firefox -P "$profile"
