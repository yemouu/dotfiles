#!/bin/sh
export HOMEWRAP_HOME="$HOME/tmp/homes/mozilla"
[ -d "$HOMEWRAP_HOME" ] || mkdir -p "$HOMEWRAP_HOME"

case $DWRAP_DISTRO in
	gentoo-glibc ) cmd=/usr/bin/firefox-bin ;;
	* ) cmd=/usr/bin/firefox ;;
esac

# If this directory doesn't exist we are inside our glibc chroot
if [ "$DWRAP_WITHIN_SANDBOX" = true ]
then exec homewrap $cmd -P drm "$@"
else exec homewrap $cmd "$@"
fi
