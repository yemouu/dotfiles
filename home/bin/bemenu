#!/bin/sh
. "${XDG_CACHE_HOME}/thm/colors.sh"

# It looks like transparency set here is stacked ontop of eachother?
# sb/sf/scb/scf don't seem to change anything
exec /usr/bin/bemenu -i \
                     -w \
                     -m all \
                     -H 32 \
                     --fn "monospace 10" \
                     --tb "#${bg_color}" \
                     --tf "#${color5}" \
                     --fb "#${bg_color}" \
                     --ff "#${color5}" \
                     --nb "#${bg_color}" \
                     --nf "#${color8}" \
                     --hb "#${bg_color}" \
                     --hf "#${fg_color}" \
                     --sb "#${color9}" \
                     --sf "#${color9}" \
                     --scb "#${color9}" \
                     --scf "#${color9}" \
                     "$@"
